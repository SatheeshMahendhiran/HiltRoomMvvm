<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HiltRoomMvvm" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--    Screen Background  -->
        <item name="android:windowBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>

        <!--    Card surface    -->
        <item name="colorSurface">@android:color/darker_gray</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="colorOnError">@color/white</item>

        <item name="actionBarStyle">@style/MyActionBar</item>

        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>-->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!--    No Action bar Theme -->
    <style name="Theme.HiltRoomMvvm.NoActionBar" parent="Theme.HiltRoomMvvm">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/black</item>
    </style>

</resources>